<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@null">
    <com.startapp.android.publish.banner.Banner
        android:id="@+id/startAppBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <com.kkkeyboard.emoji.keyboard.theme.view.CirclePageIndicator
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/circle_page_indicator"
        android:layout_below="@id/startAppBanner"
        android:padding="10dp"
        app:radius="4dp"
        app:fillColor="#fffefefe"
        app:pageColor="@color/kk_theme_light_action_bar_blue"
        app:strokeWidth="0.0dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:id="@+id/apply_button"
        android:layout_weight="1.0"
        style="?android:attr/buttonBarButtonStyle"
        android:textColor="@color/kk_theme_light_action_bar_blue"/>
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5000+ Themes"
        android:id="@+id/get_more_button"
        android:layout_weight="1.0"
        style="?android:attr/buttonBarButtonStyle"
        android:textColor="@color/kk_theme_light_action_bar_blue"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/line"
        android:layout_above="@id/buttons"
        android:background="@color/kk_theme_light_button_divider"/>
    <com.kkkeyboard.emoji.keyboard.theme.view.JazzyViewPager
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/preview_pager"
        android:layout_below="@id/circle_page_indicator"
        android:layout_above="@id/line"
        android:paddingBottom="10dp"/>
</RelativeLayout>